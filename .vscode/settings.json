{
  "files.associations": {
    ".eslintrc": "jsonc",
    ".stylelintrc": "json",
    ".dockerignore": "ignore",
    ".eslintignore": "ignore"
  },
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.validate.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,

  "search.exclude": {
    ".eslintcache": true,
    ".git": true,
    "*.{css,sass,scss}.d.ts": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "yarn.lock": true
  },
  "cSpell.words": [
    "abitype",
    "Aestus",
    "AESTUS",
    "beaconcha",
    "bigintify",
    "blox",
    "BLOXROUTE",
    "boolify",
    "bowser",
    "cmdk",
    "Flashbots",
    "FLASHBOTS",
    "fontsource",
    "holesky",
    "hookform",
    "keccak",
    "Keyshares",
    "lucide",
    "overscan",
    "permissioned",
    "RACT",
    "Redirector",
    "resharing",
    "selectables",
    "ssvweb",
    "valtio",
    "viem",
    "Wagmi",
    "Xroute"
  ],

  // Enable ESLint fix on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}
